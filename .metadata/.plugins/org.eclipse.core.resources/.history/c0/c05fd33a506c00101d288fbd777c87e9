package wipro_day_2_first_assignment;

import java.util.Scanner;

class mathOperations{
	public static int printTable(int number) {
		Scanner s=new Scanner(System.in);
		int n=s.nextInt();
		for(int i=0;i<=10;i++) {
			System.out.println(n + "*" + i + "=" +(n*i));
		}
	}
	public static int caluclateFactorial(int number) {
		System.out.println("Enter f value to print factorial");
		Scanner s= new Scanner(System.in);
		int f=s.nextInt();
		double fact=1;
		for(int i=f;i>1;i--) {
			fact=fact*i;
		}
		System.out.println(fact);
	}
	public static int checkPrime(int number) {
		System.out.println("Enter p value to check prime number");
		Scanner s=new Scanner(System.in);
		int p = s.nextInt();
		boolean prime = true;
		if(p <= 1) {
			prime =false;
		}
		else {
			for(int i=2;i<=p/2;i++) {
				if(p % i ==0) {
					prime=false;
					break;
				}
			}
			if(prime) {
				System.out.println(p+ " is a prime number");
			}
			else {
				System.out.println(p+ " is not a prime number");
			}
		}
}
	public static int printFibonnaciSeries(int number) {
		Scanner s=new Scanner(System.in);
		System.out.println("Enter first series");
		int b = s.nextInt();
		System.out.println("Enter second series");
		int c = s.nextInt();
		System.out.println("Enter the series you want to print");
		int m=s.nextInt();
		for(int i=0;i<=m;i++) {
			System.out.println(b+ " ");
			int d= b+c;
			b=c;
			c=d;
		}
	}
	
public class Assignment3 extends mathOperations{
	Scanner s=new Scanner(System.in);
